  <section class="home-section">
    <h2>Listado de empleados del ABG</h2>
    <div ng-app="ngAnimate"  >
      <div ng-controller="dataTable">
        <div class='addItems'>
          <table id='addData'>
            <thead>
              <tr>
                <td colspan='4'>
                  Add New Contact
                </td>
                <tr>
            </thead>
            <tr>
              <td colspan="1">
                <label>ID:</label>
              </td>
              <td colspan="1">
                <input type="text" ng-model="item.id" />
              </td>
              <td colspan="1">
                <label>Nombres:
                  <label>
              </td>
              <td colspan="1">
                <input type="text" ng-model="item.name" />
              </td>
              <tr>
                <td colspan="1">
                  <label>Apellidos:</label>
                </td>
                <td colspan="1">
                  <input type="text" ng-model="item.city" />
                </td>
                <td colspan="1">
                  <label>Cedula:</label>
                </td>
                <td colspan="1">
                  <input type='text' ng-model="item.state" />
                </td>
              </tr>
              <tr>
                <td colspan="1">
                  <label>Correo:</label>
                </td>
                <td colspan="1">
                  <label>Proceso:
                    <label>
                </td>
                <td colspan="1">
                  <input type="text" ng-model="item.name" />
                </td>
                <tr>
                  <td colspan="1">
                    <label>Subproceso:</label>
                  </td>
                  <td colspan="1">
                    <input type="text" ng-model="item.city" />
                  </td>
                  <td colspan="1">
                    <label>Puesto:</label>
                  </td>
                  <td colspan="1">
                    <input type='text' ng-model="item.state" />
                  </td>
                </tr>
                <tr>
                  <td colspan="1">
                    <label>Lugar de Trabajo:</label>
                  </td>
                  <td colspan="1">
                    <label>Remuneraciòn Mensual:</label>
                  </td>
                <td colspan="2">
                  <input type="tel" ng-model="item.phone" />
                </td>
                <td colspan="1"></td>
              </tr>
              <tr>
                <td colspan="1"></td>
                <td colspan="1">
                  <input type="Button" class='add' value="Add" ng-click="addItem(item)" />
                </td>
                <td colspan="1"></td>
                <td colspan="1">
                  <input type="button" class='close' value="Done" />
                </td>
              </tr>
          </table>
        </div>
        <div class="resp-table">
          <table id='main' class="animate-container" border="1">
            <thead>
              <tr class='act'>
                <td colspan="14" id='search'>
                  <input type='text' id='search' placeholder="Buscar" ng-model="searchItems">
                </td>
  
  
                <td colspan="11" class='add'>
                  <input type="button" class='insert' value="Nuevo Registro" />
                </td>
              </tr>
              <tr class="animate-repeat" id='labels'>
                <td colspan='1'>ID</td>
                <td colspan='4'>Nombres</td>
                <td colspan='3'>Apellidos</td>
                <td colspan='2'>Cedula</td>
                <td colspan='3'>Correo</td>
                <td colspan='1'>Proceso</td>
                <td colspan='4'>Subproceso</td>
                <td colspan='4'>Puesto</td>
                <td colspan='1'>Lugar de Trabajo</td>
                <td colspan='1'>Remuneraciòn Mensual</td>
                <td colspan='1'>Remove Item</td>
              </tr>
            </thead>
            <tbody>
              <tr class="animate-repeat" ng-repeat="item in items | filter:searchItems">
                <td data-title="ID:" colspan='1'>{{item.id}}</td>
                <td data-title="Nombres:" colspan='4'>{{item.name}}</td>
                <td data-title="Apellidos:" colspan='3'>{{item.city}}</td>
                <td data-title="Cedula:" colspan='2'>{{item.state}}</td>
                <td data-title="Correo:" colspan='3'>{{item.phone}}</td>
                <td data-title="Proceso:" colspan='1'>{{item.name}}</td>
                <td data-title="Subproceso:" colspan='4'>{{item.city}}</td>
                <td data-title="Puesto:" colspan='4'>{{item.state}}</td>
                <td data-title="Lugar de Trabajo:" colspan='1'>{{item.phone}}</td>
                <td data-title="Remuneraciòn Mensual:" colspan='1'>{{item.phone}}</td>
                <td data-title="" colspan='1' id = 'rem'>
                  <input type="button" value="Delete" ng-click="removeItem($index)" />
                </td>
              </tr>
            </tbody>
          </table>
        </div>
      </div>
    </div>
